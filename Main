package com.company;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner ask = new Scanner(System.in);

    int customerAge = 12;
    int priceCount = 10;
    String productName = "Dinosaur";



           // Make by Alex Demeter / @haku /*
        System.out.println(productName + " is obviously bought by " + customerAge + " years old " + "with price " + priceCount + "$");
        System.out.println("What likes you to buy " );
        productName = ask.nextLine();
        System.out.println("How old are you? ");
        customerAge = ask.nextInt();
        System.out.println("How much it costs? ");
        priceCount = ask.nextInt();
        if (customerAge != 18 || productName == "Durex") {
            System.out.println("Hey, you can't have these!");
        } else {
            System.out.println("So you are " + customerAge + " and you like to buy " + productName + " and it costs " + priceCount + "$");

}

    }



}
